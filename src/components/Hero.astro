<script is:inline>
  function copyDiscordUsername() {
    navigator.clipboard.writeText("shtian");
    const toast = document.getElementById("discord-toast");
    toast?.classList.add("opacity-100");
    toast?.classList.remove("translate-y-full");
    setTimeout(() => {
      toast?.classList.remove("opacity-100");
      toast?.classList.add("translate-y-full");
    }, 5000);
  }

  // Add typewriter effect
  document.addEventListener("DOMContentLoaded", () => {
    const heading = document.querySelector(".typewriter");
    const text = heading.textContent;
    const width = heading.offsetWidth;
    const height = heading.offsetHeight;
    heading.style.width = `${width}px`;
    heading.style.height = `${height}px`;
    heading.style.color = "inherit";
    heading.textContent = "";
    let i = 0;

    function type() {
      if (i < text.length) {
        heading.textContent += text.charAt(i);
        i++;
        setTimeout(type, 40);
      }
    }

    type();
  });
</script>

