---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import UniverseBackground from "../components/UniverseBackground.astro";
import PlanetBackground from "../components/PlanetBackground.astro";
import Layout from "./Layout.astro";
interface Props {
  title?: string;
  size?: "sm" | "md" | "lg";
}

const { title, size = "md" } = Astro.props as Props;
---

<Layout title={title}>
  <UniverseBackground />
  <PlanetBackground size={size} />
  <Header />
  <main class="relative min-h-[75svh]">
    <div class="mx-auto max-w-5xl px-4 lg:px-8">
      <slot />
    </div>
  </main>
  <Footer />
</Layout>
