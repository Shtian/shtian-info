---
import PostHog from "../components/PostHog.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
const { title = "" } = Astro.props;
---

<!doctype html>
<html lang="en" class="m-0 h-full dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>Shtian's universe{title ? ` - ${title}` : ""}</title>
    <meta name="description" content="Stian Haga's portfolio - Web Dev" />
    <meta name="author" content="Stian Haga" />
    <meta
      name="keywords"
      content="web development, software engineer, portfolio, projects, Stian Haga"
    />
    <meta
      property="og:title"
      content={`Shtian's universe${title ? ` - ${title}` : ""}`}
    />
    <meta
      property="og:description"
      content="Stian Haga's portfolio - Web Dev"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.shtian.info" />
    <meta property="og:image" content="/og-image.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content={`Shtian's universe${title ? ` - ${title}` : ""}`}
    />
    <meta
      name="twitter:description"
      content="Stian Haga's portfolio - Web Dev"
    />
    <meta name="twitter:image" content="/og-image.jpg" />
    <ClientRouter />
    <script>
      document.documentElement.classList.toggle(
        "dark",
        localStorage.theme === "dark" ||
          (!("theme" in localStorage) &&
            window.matchMedia("(prefers-color-scheme: dark)").matches),
      );
    </script>
    <PostHog />
  </head>
  <body
    class="m-0 w-full min-h-full font-sans antialiased bg-background text-foreground transition-colors"
  >
    <slot />
  </body>
</html>
